{
    "buildCommand": "cd anatomy-app && npm install && npm run build",
    "outputDirectory": "anatomy-app/dist",
    "installCommand": "npm install",
    "framework": "vite",
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "headers": [
        {
            "source": "/(.*).glb",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                },
                {
                    "key": "Content-Type",
                    "value": "model/gltf-binary"
                }
            ]
        }
    ]
}